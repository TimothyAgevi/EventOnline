<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:padding="30dp"
    android:orientation="vertical"
    android:background="@drawable/activity_color"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistrationActivity">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="150dp"
        android:layout_height="97dp"
        android:layout_marginLeft="70sp"
        android:layout_marginTop="0dp"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <EditText
        android:id="@+id/edtName"
        android:layout_width="324dp"
        android:layout_height="50dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/edit_round"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName"
        android:padding="15dp"
        android:textColor="#080505"
        android:textColorHint="#080505"
        android:textSize="20dp"
        android:textStyle="italic|bold" />

    <EditText
        android:id="@+id/edtMail"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/edit_round"
        android:ems="10"
        android:hint="Name@Email.Com"
        android:inputType="textEmailAddress"
        android:padding="15dp"
        android:textColor="#080505"
        android:textColorHint="#080505"
        android:textStyle="italic|bold"
        tools:text="Email" />

    <EditText
        android:id="@+id/editPass"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/edit_round"
        android:ems="10"
        android:hint="Password..."
        android:inputType="textPassword"
        android:padding="15dp"
        android:textColor="#080505"
        android:textColorHint="#080505"
        android:textStyle="italic|bold" />

    <EditText
        android:id="@+id/editPass1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/edit_round"
        android:ems="10"
        android:hint="Confirm Password... "
        android:inputType="textPassword"
        android:padding="15dp"
        android:textColor="#080505"
        android:textColorHint="#080505"
        android:textStyle="italic|bold" />

    <LinearLayout
        android:id="@+id/linrad"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:textSize="25dp"
            android:textColor="#f1efef"
            android:id="@+id/radioMale"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="RadioButton"
            tools:text="Male" />

        <RadioButton
            android:id="@+id/radioFemale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Female"
            android:textColor="#e7e6e6"
            android:textSize="25dp" />

        <RadioButton
            android:id="@+id/radioOther"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RadioButton"
            android:textColor="#eef1f4"
            android:textSize="25dp"
            tools:text="Others" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar2"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@+id/linrad" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:layout_marginRight="5dp"
            android:id="@+id/btnLogin"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/button_round"
            android:text="Register"
            android:textColor="#093b7c"
            android:textSize="25dp"
            android:textStyle="bold|italic" />

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/button_round"
            android:text="LOG IN"
            android:textColor="#093b7c"
            android:textSize="25dp"
            android:textStyle="bold|italic" />


    </LinearLayout>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Forgot Password?"
        android:textColor="#333"
        android:textSize="30sp"
        tools:text="Forgot Password?" />


</LinearLayout>